@model AIS_LO_System.Models.Rubric

@{
    ViewData["Title"] = "Edit Rubric";
}

<h2>Edit Rubric</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    @for (int i = 0; i < Model.Criteria.Count; i++)
    {
        <input type="hidden" asp-for="Criteria[i].Id" />

        <h4>@Model.Criteria[i].CriterionName</h4>

        <div class="row mb-4">
            @for (int j = 0; j < Model.Criteria[i].Levels.Count; j++)
            {
                <input type="hidden" asp-for="Criteria[i].Levels[j].Id" />
                <input type="hidden" asp-for="Criteria[i].Levels[j].Score" />

                <div class="col-md-2">
                    <label>
                        Score @Model.Criteria[i].Levels[j].Score
                    </label>

                    <textarea asp-for="Criteria[i].Levels[j].Description"
                              class="form-control"
                              rows="3">
                            </textarea>
                </div>
            }
        </div>

        <hr />
    }

    <button type="submit" class="btn btn-primary">
        Save Changes
    </button>

    <a asp-action="Preview"
       asp-route-id="@Model.Id"
       class="btn btn-secondary">
        Cancel
    </a>

</form>
