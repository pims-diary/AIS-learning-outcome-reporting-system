@{
    ViewData["Title"] = $"Assignment {ViewBag.AssessmentName}";
}

<link rel="stylesheet" href="~/css/assignment-dashboard.css" />

<div class="assignment-page">

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a class="crumb-primary"
           asp-controller="CourseDashboard"
           asp-action="Index"
           asp-route-courseCode="@ViewBag.CourseCode"
           asp-route-year="@ViewBag.Year"
           asp-route-trimester="@ViewBag.Trimester">
            @ViewBag.CourseCode @ViewBag.CourseTitle
        </a>

        <span>/</span>
        <span class="crumb-primary">Assessments</span>
        <span>/</span>
        <span>@ViewBag.AssessmentName</span>
    </div>

    <!-- Page Title -->
    <h1 class="page-title">@ViewBag.AssessmentName</h1>

    <!-- Cards Grid -->
    <div class="card-grid">

        <a asp-controller="Assignment"
           asp-action="Information"
           asp-route-assessmentName="@ViewBag.AssessmentName"
           asp-route-courseCode="@ViewBag.CourseCode"
           asp-route-courseTitle="@ViewBag.CourseTitle"
           asp-route-year="@ViewBag.Year"
           asp-route-trimester="@ViewBag.Trimester"
           class="assignment-card-link">

            <div class="assignment-card">
                <img src="~/images/assignment-info.svg" alt="Assignment Info" />
                <h3>Assignment Information</h3>
                <p>Essential details of the Assessment</p>
            </div>

        </a>

        <a asp-controller="Rubric"
           asp-action="Index"
           asp-route-assignmentId="@ViewBag.AssignmentId"
           asp-route-assessmentName="@ViewBag.AssessmentName"
           asp-route-courseCode="@ViewBag.CourseCode"
           asp-route-courseTitle="@ViewBag.CourseTitle"
           asp-route-year="@ViewBag.Year"
           asp-route-trimester="@ViewBag.Trimester"
           class="assignment-card-link">

            <div class="assignment-card">
                <img src="~/images/rubric.svg" alt="Rubric" />
                <h3>Rubric Management</h3>
                <p>Upload, Edit, or Create the Rubric</p>
            </div>

        </a>

        <div class="assignment-card">
            <h3>LO Mapping and Weighting</h3>
            <p>Mapping each criterion to LOs and assigning its weight</p>
        </div>

        <div class="assignment-card">
            <h3>Mark Students</h3>
            <p>Enter or Update student scores</p>
        </div>

    </div>

</div>
